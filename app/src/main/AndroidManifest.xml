<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.ancientlore.snake">

	<application
		android:allowBackup="true"
		android:icon="@drawable/snake_logo"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name="com.ancientlore.snake.ActivityMain"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name="com.ancientlore.snake.ActivityGame"
			android:label="Game"
			android:launchMode="singleTop"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity
			android:name="com.ancientlore.snake.ActivityMenu"
			android:label="Menu"
			android:launchMode="singleTop"
			android:parentActivityName="com.ancientlore.snake.ActivityGame"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.Dialog"/>
		<activity
			android:name="com.ancientlore.snake.ActivitySettings"
			android:label="Settings"
			android:launchMode="singleTop"
			android:parentActivityName="com.ancientlore.snake.ActivityMenu"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.Dialog"/>
	</application>

</manifest>
